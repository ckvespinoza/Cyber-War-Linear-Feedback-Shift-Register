module comparator_10bit (A_gt_B, A, B);
	input  logic [9:0] A;
	input  logic [9:0] B;
	output logic A_gt_B;

	integer i;
	logic found_diff;

	always_comb begin
	  A_gt_B = 0;
	  found_diff = 0;
	  // Compare from MSB to LSB
	  for (i = 9; i >= 0; i = i - 1) begin
			if (!found_diff) begin
				 if (A[i] & ~B[i]) begin
					  A_gt_B = 1;
					  found_diff = 1;
				 end
				 else if (~A[i] & B[i]) begin
					  A_gt_B = 0;
					  found_diff = 1;
				 end
			end
	  end
	end

endmodule